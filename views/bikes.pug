extends layout

block content
  h1 Search results bikes 
  -  var items = result
  - console.log(result)
  div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/bike/update?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Item #{item.bike_type}(#{item.model}) is #{item.cost} 
          button.btn( class="btn-primary ml-1", onclick= destination) Update 
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 

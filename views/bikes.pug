extends layout

block content
  h1 Search results bikes 
  -  var result = results
  div.container-fluid
    div.row
      each item,index in result
        div.col-sm-2(onclick=`buy(${index})`) bike company: #{item["bike_type"]}  <hr>  model: #{item["model"]} <hr> cost: #{item["cost"]}
  script.
      function buy(index){
        alert("you purchased item "+(index+1))
      }
